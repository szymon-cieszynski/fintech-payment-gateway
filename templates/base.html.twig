<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
                rel="stylesheet" integrity="..." crossorigin="anonymous"
            />
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    {% block header %}
        <nav class="navbar navbar-light bg-light sticky-top">
            <div class="d-flex align-items-center w-100">
                <a href="{{ path('home') }}" class="navbar-brand">
                    ~Fintech Payment Gateway~
                </a>
                {% if is_granted('ROLE_CLIENT') %}
                    <a href="{{ path('payments') }}" class="btn btn-dark me-2">
                        My payments
                    </a>
                    <a href="{{ path('trades') }}" class="btn btn-dark me-2">
                        My trades
                    </a>
                    <a href="{{ path('reports') }}" class="btn btn-dark me-2">
                        Reporting
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-dark me-2">
                        Log in
                    </a>
                    <a href="{{ path('register') }}" class="btn btn-dark me-2">
                        Sign up
                    </a>
                {% endif %}
                {% if is_granted('ROLE_CLIENT') %}
                    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-auto me-2">
                        Log out
                    </a>
                {% endif %}

            </div>
        </nav>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

    {% endblock %}

        {% block body %}{% endblock %}

    </body>
</html>
