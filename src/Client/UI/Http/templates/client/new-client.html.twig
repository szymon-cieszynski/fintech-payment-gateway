{% extends 'base.html.twig' %}

{% block title %}New client form{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block form_row %}

    {{- form_errors(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_help(form) -}}
{% endblock form_row %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto">
                <h2>Tell me, what kind of client are you?</h2>
                <div class="btn-group mb-3">
                    <button class="btn btn-outline-primary" id="showPersonal">Personal client</button>
                    <button class="btn btn-outline-secondary" id="showBusiness">Business client</button>
                </div>

                <div id="personalForm" style="display: none;">
                    {{ form_start(registrationFormPersonal, {
                        'attr': {'class': 'form-signin',
                            'novalidate': 'novalidate', 'id': 'personalFormElement'}
                    }) }}
                    <h1 class="h3 mb-3 font-weight-normal">Create a free account.</h1>
                    {{ form_end(registrationFormPersonal) }}
                    <button type="submit" form="personalFormElement" id="personalFormButton" class="btn btn-dark btn-primary btn-block ">Register</button>
                </div>

                <div id="businessForm" style="display: none;">
                    {{ form_start(registrationFormBusiness, {
                        'attr': {'class': 'form-signin',
                            'novalidate': 'novalidate', 'id': 'businessFormElement'}
                    }) }}
                    <h1 class="h3 mb-3 font-weight-normal">Create a free account.</h1>
                    {{ form_end(registrationFormBusiness) }}
                    <button type="submit" form="businessFormElement" id="businessFormButton" class="btn btn-dark btn-primary btn-block ">Register</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('showPersonal').addEventListener('click', () => {
            document.getElementById('personalForm').style.display = 'block';
            document.getElementById('businessForm').style.display = 'none';
        });
        document.getElementById('showBusiness').addEventListener('click', () => {
            document.getElementById('businessForm').style.display = 'block';
            document.getElementById('personalForm').style.display = 'none';
        });

        document.addEventListener('DOMContentLoaded', () => {
            const personalForm = document.getElementById('personalForm');
            if (personalForm) {
                const errors = personalForm.querySelectorAll('[id*="error"]');

                if (errors.length > 0) {
                    personalForm.style.display = 'block';
                }
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            const businessForm = document.getElementById('businessForm');
            if (businessForm) {
                const errors = businessForm.querySelectorAll('[id*="error"]');

                if (errors.length > 0) {
                    businessForm.style.display = 'block';
                }
            }
        });


    </script>

{% endblock %}
